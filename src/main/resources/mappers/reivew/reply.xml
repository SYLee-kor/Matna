<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="review_reply">
	<insert id="insert">
	<![CDATA[
		insert into review_reply (no,rNo,writer,content)
		values(review_reply_seq.nextval, #{rNo}, #{writer}, #{content})
	]]>
	</insert>
	
	<update id="update">
	<![CDATA[
		update review_reply set content = #{content}
		where no=#{no}
	]]>
	</update>
	
	<delete id="delete">
		delete from review_reply
		where no=#{no}
	</delete>
	
	<select id="list" resultType="reply">
		select no,rNo,writer,(select nickName from member where no=writer) nickName
			,content,regdate
		 from review
		 order by no desc
	</select>
</mapper>
